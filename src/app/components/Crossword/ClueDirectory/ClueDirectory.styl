
$mdl-grey-300 = rgb(224, 224, 224)

#clue-directory
    flex-direction row
    height 565px

    .clue-column
        width 50%

        .clue-column-header
            text-align center
            padding-top 15px
            height 50px
            box-sizing border-box

        &:first-child
            border-right 1px solid grey

        .clue-list-wrapper
            height 100%
            overflow-y scroll

        .clue-list
            margin 0
            padding 0

            .clue
                align-items center
                font-size 12px
                padding 5px 10px

                &:hover
                    background-color $mdl-grey-300

                .clue-content
                    display flex
                    justify-content flex-start
                    flex-flow row nowrap

                    .clue-text
                        margin-left 10px
