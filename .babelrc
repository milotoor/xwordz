{
    "presets": ["react", "es2015"],
    "plugins": [
        "transform-class-properties",
        "react-hot-loader/babel",
        "transform-decorators-legacy",
        "transform-object-assign",
        "transform-object-rest-spread",
        "transform-regenerator",
        ["module-resolver", {
            "root": ["./src"],
            "alias": {
                "mdc": "./src/lib/mdc"
            }
        }]
    ],
    "env": {
        "test": {
            "plugins": [
                ["transform-runtime", {
                    "helpers": true,
                    "polyfill": true,
                    "regenerator": false
                }]
            ]
        },
        "production": {
            "presets": [
                [
                    "es2015",
                    {
                        "modules": false
                    }
                ]
            ]
        }
    }
}
